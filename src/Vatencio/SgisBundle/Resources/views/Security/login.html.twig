{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div id="page-wrapper">
    <div id="header">
        <div id="contenido_header">
            <div id="logo">
                <img src="{{ asset('bundles/vatenciosis/images/logo_rht_blanco_1.png') }}">
            </div>
        </div>        
    </div>
    <div id="main">
        <form action="{{ path('login_check') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ render(controller('VatencioSgisBundle:Security:getToken')) }}" />
            <div class="form-item">
                <div class="form-item-label">
                    <label for="username">Usuario</label>
                </div>
                <input id="username" type="text" class="form_text" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-item">
                <div class="form-item-label">
                    <label for="password">Contraseña</label>
                </div>
                <input id="password" type="password" name="_password" class="form_text"/>
            </div>
            {% if error %}
                <div id="login-error">{{ error.message|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}
            <input type="submit" id="login_boton" name="login" value="Iniciar sesión"/>
        </form>
    </div> 
</div>
